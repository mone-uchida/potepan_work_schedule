<div class="main new">
<h3>スケジュール新規登録</h3>
 <div class="form"> 
    <%= form_for @post do |f| %>
      <table>
        <tr>
         <th><%= f.label :title ,"タイトル" %></th>
         <td><%= f.text_field :title %></td>
        </tr> 

       <tr>
        <th><%= f.label :started_at,"開始日" %></th>
        <td><%= f.date_field :started_at %></td>
       </tr>

       <tr>
       <th><%= f.label :finished_at,"終了日" %></th>
       <td><%= f.date_field :finished_at %></td>
       </tr>

       <tr>
       <th><%= f.label :completed,"完了" %></th>
       <td><%= f.check_box :completed %></td>
       </tr>

       <tr>
       <th><%= f.label :memo,"メモ" %></th>
       <td><%= f.text_area :memo %></td>
       </tr>
      </table>
 
      <div>
        <ul>
          <li class="botton"><%= f.submit "登録完了する" %></li>
          <li class="botton"><%= link_to("スケジュール情報一覧に戻る","/") %></li>
        </ul>
      </div>
    <% end %>
    </div>
   </div> 